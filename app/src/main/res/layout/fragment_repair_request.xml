<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новый запрос на ремонт"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Где проблема?">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRepairLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Что не работает?">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRepairDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendRepair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить"
        style="@style/Widget.MaterialComponents.Button" />

    <TextView
        android:id="@+id/tvRepairSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Последние обращения"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRepairHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tvRepairEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пока нет запросов"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#88000000"
        android:paddingTop="16dp" />
</LinearLayout>
